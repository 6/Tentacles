%form{:method => "POST", :action => @scraper.path}
  %p
    %input{:type => "text", :name => "title", :placeholder => "Enter a name for the scraper", :value => @scraper.title}
  %p
    %textarea{:name => "code", :placeholder => "Code", :rows => 8}= @scraper.code
  %p
    %input.btn.btn-primary{:type => "Submit", :value => "Save"}
    %a.btn{:href => @scraper.cancel_path} Cancel
